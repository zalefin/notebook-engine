import sys
from pathlib import Path
import json
from subprocess import call, Popen
import datetime
import os
import hashlib
import re
from collections import defaultdict

TIME_FORMAT = '%Y-%m-%d'
BROWSER = 'chromium'
EDITOR = 'nvim'
# TYPES = ['LEC', 'REC', 'HW', 'OTHER']

class NBDB(object):

    def __init__(self):
        self.raws = [e for e in os.listdir() if e.endswith('.html') and e != 'index.html']
        self.entries = [self.parse_entry(e) for e in self.raws]

    def get_by(self, cid=None, ctype=None,
            year=None, month=None, day=None):
        ents = [e for e in self.entries]
        if cid: ents = [e for e in ents if e['id']==cid]
        if ctype: ents = [e for e in ents if e['type']==ctype]
        if year: ents = [e for e in ents if e['day']==day]
        if month: ents = [e for e in ents if e['month']==month]
        if day: ents = [e for e in ents if e['year']==year]
        return ents

    @staticmethod
    def parse_entry(s):
        s = s[:-5]
        c_name, c_type, date = s.split('_')
        day, month, year = date.split('-')
        return {"id": c_name, "type": c_type, "day": day, "month": month, "year": year}


def get_config():
    if not os.path.isfile('./config.json'):
        print('missing config!')
        exit()

    with open('./config.json', 'r') as f:
        data = f.read()
    return json.loads(data)


def create(src_dirs):
    for i, class_name in enumerate(src_dirs):
        print(i, class_name)
    uin_name = int(input('> '))
    # for i, type_name in enumerate(TYPES):
    #     print(i, type_name)
    # uin_type = int(input('> '))
    fname = "{}/notes/{}.md".format(src_dirs[uin_name],
            datetime.datetime.now().strftime(TIME_FORMAT))
    call([EDITOR, fname])

    # TODO fix todoist functionality
    # print('Committing to Todoist...')
    # commit_todoist(fname, uin_name)
    # print('Finished!')


def commit_todoist(p, class_i):
    import todoist
    from todoist.managers.items import ItemsManager

    data = get_data()
    api = todoist.TodoistAPI(data['todoist']['token'])
    api.sync()
    content = "Review {} : {}".format(data['classes'][class_i]['name'], p[:-3])
    man = ItemsManager(api)
    man.add(content=content, priority=2, project_id=data['todoist']['project_id'])
    api.commit()


